Global WindowProgress

Global GadgetProgressText, GadgetProgress


Procedure OpenWindowProgress(x = 0, y = 0, width = 400, height = 70)
  WindowProgress = OpenWindow(#PB_Any, x, y, width, height, l("progress","title"), #PB_Window_SystemMenu | #PB_Window_Invisible | #PB_Window_Tool | #PB_Window_WindowCentered, WindowID(WindowMain))
  GadgetProgressText = TextGadget(#PB_Any, -10, 10, 410, 25, "", #PB_Text_Center)
  GadgetProgress = ProgressBarGadget(#PB_Any, -10, 40, 410, 30, 0, 100, #PB_ProgressBar_Smooth)
EndProcedure

Procedure WindowProgress_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

